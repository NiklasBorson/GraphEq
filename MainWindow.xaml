<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="GraphEq.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GraphEq"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <canvas:CanvasControl x:Name="Canvas" Grid.RowSpan="2" CreateResources="CanvasControl_CreateResources" Draw="CanvasControl_Draw" ManipulationMode="Scale,TranslateX,TranslateY" ManipulationDelta="CanvasControl_ManipulationDelta"/>

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="f(x) =" VerticalAlignment="Center"/>
            <TextBox x:Name="FormulaTextBox" Width="300" PlaceholderText="Type formula" TextChanged="TextBox_TextChanged"/>
        </StackPanel>
    </Grid>
</Window>

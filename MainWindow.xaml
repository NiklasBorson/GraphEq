<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="GraphEq.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GraphEq"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Formula Grapher">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <canvas:CanvasControl 
            x:Name="Canvas" 
            Grid.RowSpan="2" 
            CreateResources="CanvasControl_CreateResources" 
            Draw="CanvasControl_Draw" 
            ManipulationMode="Scale,TranslateX,TranslateY" 
            ManipulationDelta="CanvasControl_ManipulationDelta"
            PointerWheelChanged="CanvasControl_PointerWheelChanged"/>

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="f(x) =" VerticalAlignment="Center"/>
            <TextBox x:Name="FormulaTextBox" Width="300" PlaceholderText="Type formula" TextChanged="TextBox_TextChanged"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
            <Button Content="Center Grid" Click="CenterButton_Click"/>
            <Button Content="User Functions" Click="UserFunctionsButton_Click"/>
            <Button Content="Help" Click="HelpButton_Click"/>
        </StackPanel>

        <Grid x:Name="FunctionsPane" Width="300" Grid.RowSpan="2" HorizontalAlignment="Right" Background="DarkGray" Padding="2" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Content="&#xE711;" FontFamily="Segoe MDL2 Assets" Click="CloseFunctionsButton_Click"/>
            <ScrollViewer x:Name="HelpScrollViewer" Grid.Row="1">
                <TextBox IsReadOnly="True" AcceptsReturn="True" Text="{x:Bind HelpText,Mode=OneTime}"/>
            </ScrollViewer>
            <ScrollViewer x:Name="UserFunctionsScrollViewer" Visibility="Collapsed" Grid.Row="1">
                <TextBox 
                    x:Name="UserFunctionsTextBox"
                    AcceptsReturn="True" 
                    TextChanged="UserFunctionsTextBox_TextChanged" 
                    PlaceholderText="Type one function per line, e.g.,&#10;pow(x,y) = x^y"/>
            </ScrollViewer>
        </Grid>

    </Grid>
</Window>

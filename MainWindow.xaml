<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="GraphEq.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GraphEq"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Graph Equations">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- The canvas spans all rows and columns, filling the entire background -->
        <canvas:CanvasControl 
            x:Name="Canvas" 
            Grid.RowSpan="3"
            Grid.ColumnSpan="4"
            CreateResources="CanvasControl_CreateResources" 
            SizeChanged="Canvas_SizeChanged"
            Draw="CanvasControl_Draw" 
            ManipulationMode="Scale,TranslateX,TranslateY" 
            ManipulationDelta="CanvasControl_ManipulationDelta"
            PointerWheelChanged="CanvasControl_PointerWheelChanged"/>

        <!-- Nested grid for the formulas is in row 0, column 0 -->
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Formula label and text box are in row 0, columns 0..1 -->
            <TextBlock Text="f(x) =" Foreground="DarkRed" FontWeight="Bold" FontStyle="Italic" VerticalAlignment="Center"/>
            <TextBox x:Name="FormulaTextBox" Grid.Column="1" PlaceholderText="Type formula" IsSpellCheckEnabled="False" TextChanged="Formula_TextChanged"/>

            <!-- Second formula label and text box are in row 2, columns 0..1 -->
            <TextBlock Text="f(x) =" Grid.Row="2" Foreground="Blue" FontWeight="Bold" FontStyle="Italic" VerticalAlignment="Center"/>
            <TextBox x:Name="Formula2TextBox" Grid.Row="2" Grid.Column="1" PlaceholderText="Type formula" IsSpellCheckEnabled="False" TextChanged="Formula2_TextChanged"/>
        </Grid>

        <!-- Center grid button is in row 0, column 1 -->
        <Button Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Click="CenterButton_Click" ToolTipService.ToolTip="Center grid.">
            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE81D;"/>
        </Button>

        <!-- Open panel button in in row 0, column 3 -->
        <Button Grid.Column="4" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5" Click="OpenSidePanel_Click" ToolTipService.ToolTip="Open side panel.">
            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8A0;"/>
        </Button>

        <!-- The side panel spans all rows and columns but is right-aligned with a fixed width -->
        <Border x:Name="SidePanel"
                Width="400" Grid.RowSpan="3" Grid.ColumnSpan="4" HorizontalAlignment="Right"
                Background="{ThemeResource ContentDialogBackgroundThemeBrush}" BorderBrush="DarkSlateGray" BorderThickness="2" Padding="3">
            <Border.Resources>
                <Storyboard x:Name="SidePanelOpenAnimation">
                    <DoubleAnimation 
                        Storyboard.TargetName="SidePanelTranslation"
                        Storyboard.TargetProperty="X"
                        From="{x:Bind SidePanel.Width}" To="0" Duration="0:0:0.1"/>
                </Storyboard>
                <Storyboard x:Name="SidePanelCloseAnimation">
                    <DoubleAnimation 
                        Storyboard.TargetName="SidePanelTranslation"
                        Storyboard.TargetProperty="X"
                        From="0" To="{x:Bind SidePanel.Width}" Duration="0:0:0.1"/>
                </Storyboard>
            </Border.Resources>
            <Border.RenderTransform>
                <TranslateTransform x:Name="SidePanelTranslation" X="{x:Bind SidePanel.Width}"/>
            </Border.RenderTransform>
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button HorizontalAlignment="Right" ToolTipService.ToolTip="Close side panel." Click="CloseSidePanel_Click">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE89F;"/>
                </Button>
                <TabView Grid.Row="1" VerticalAlignment="Stretch" IsAddTabButtonVisible="False">
                    <TabViewItem Header="Help" IsClosable="False">
                        <ScrollViewer>
                            <TextBox IsReadOnly="True" AcceptsReturn="True" FontFamily="Consolas" Text="{x:Bind HelpText,Mode=OneTime}"/>
                        </ScrollViewer>
                    </TabViewItem>
                    <TabViewItem Header="My Functions" IsClosable="False">
                        <ScrollViewer VerticalAlignment="Stretch">
                            <TextBox 
                                x:Name="UserFunctionsTextBox"
                                IsSpellCheckEnabled="False"
                                AcceptsReturn="True" 
                                TextWrapping="Wrap"
                                TextChanged="UserFunctionsTextBox_TextChanged" 
                                PlaceholderText="; Examples&#10;pow(x,y) = x^y&#10;circle_area(r) = pi * r^2"/>
                        </ScrollViewer>
                    </TabViewItem>
                </TabView>
            </Grid>
        </Border>
    </Grid>
</Window>
